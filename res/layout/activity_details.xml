<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".DetailsActivity" >
    
    <include 
        android:id="@+id/caption_bar"
        android:layout_width="match_parent"
        android:layout_height="54dp"
        android:layout_alignParentTop="true"
        layout="@layout/caption_bar" />
    
    <RelativeLayout
        android:id="@+id/activity_details_title_layout"
    	android:layout_width="match_parent"
    	android:layout_height="wrap_content"    	
    	android:layout_marginBottom="@dimen/activity_vertical_padding"
    	android:layout_marginLeft="@dimen/activity_horizontal_padding"
    	android:layout_marginRight="@dimen/activity_horizontal_padding"
    	android:layout_marginTop="@dimen/activity_vertical_padding"    	
    	android:layout_below="@+id/caption_bar"    	
    	android:paddingLeft="12dp"
	    android:paddingRight="12dp"
	    android:paddingTop="12dp"
	    android:paddingBottom="12dp"    	  	
    	android:background="@drawable/shape_item" >
    	
    	<TextView
	        android:id="@+id/activity_details_item_title_label"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:layout_alignParentLeft="true"                     
	        android:textColor="@android:color/black"
	        android:textSize="22sp"
	        android:textStyle="bold"
	        android:text="@string/title_label" />
    	
    	<TextView
	        android:id="@+id/activity_details_item_title"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:layout_toRightOf="@+id/activity_details_item_title_label"	        
	        android:layout_marginLeft="18dp"	                  
	        android:textColor="@android:color/black"
	        android:textSize="22sp" />        
    </RelativeLayout>   

    <TextView
        android:id="@+id/activity_details_item_text"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginBottom="16dp"
        android:layout_marginLeft="@dimen/activity_horizontal_padding"
    	android:layout_marginRight="@dimen/activity_horizontal_padding"    	
    	android:paddingLeft="12dp"
	    android:paddingRight="12dp"
	    android:paddingTop="6dp"
	    android:paddingBottom="6dp"    	        
        android:layout_below="@+id/activity_details_title_layout"
        android:gravity="left"              
        android:textColor="@android:color/black"
        android:textSize="22sp"        
        android:background="@drawable/shape_item" />

</RelativeLayout>